    <%= f.file_field :voz, :required => true, required: true %>
  </div>
  <br>
  <div class="col-lg-12">
    <%= f.label :comentarios, 'Comentarios personales: '%><br />
    <%= f.text_area :comentarios, autofocus: true, placeholder: "Ingrese un comentario u observación sobre la voz enviada...", size: "24x6", required: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Enviar voz', :class=>'btn btn-danger' %>
  </div>
</div>
</div>
<% end %>
