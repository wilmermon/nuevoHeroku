<div class="container">
 <div class="col-lg-12">
<%= form_with(model: [@vocess_locutor_new], local: true) do |f| %>
  <% if @vocess_locutor_new.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vocess_locutors_new.errors.count, "error") %> prohibited this vocess_locutor from being saved:</h2>

      <ul>
      <% @vocess_locutor_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6">
    <%= f.label :nombresLocutor, 'Nombres: ', class:"sr-only" %><br />
    <%= f.text_field :nombresLocutor, autofocus: true, placeholder: "Ingrese los nombres ...", required: true %>	
  </div>
  
  <div class="col-lg-6">
    <%= f.label :apellidosLocutor, 'Apellidos: ', class:"sr-only" %><br />
    <%= f.text_field :apellidosLocutor, autofocus: true, placeholder: "Ingrese los apellidos ...", required: true %>
  </div>
  
 <div class="col-lg-6">
    <%= f.label :emailLocutor, 'Correo electrónico: ', class:"sr-only" %><br />
    <%= f.email_field :emailLocutor, autofocus: true, autocomplete: "email", placeholder: "Ingrese el correo electrónico ...", required: true %>
  </div>
  <br>
  <div class="col-lg-6">
    <%= f.label :voz, 'Archivo de voz: ' %><br>
